          },
          "longitude": {
            "type": "float"
          }
        }
      },
      "json_data": {
        "type": "object",
        "dynamic": true
      },
      "tags": {
        "type": "keyword"
      },
      "type": {
        "type": "keyword"
      },
      "host": {
        "properties": {
