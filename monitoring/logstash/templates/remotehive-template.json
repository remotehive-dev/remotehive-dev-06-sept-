          },
          "hostname": {
            "type": "keyword"
          },
          "ip": {
            "type": "ip"
          },
          "mac": {
            "type": "keyword"
          }
        }
      },
      "agent": {
        "properties": {
          "name": {
            "type": "keyword"
          },
          "type": {
            "type": "keyword"
          },
          "version": {
            "type": "keyword"
          },
          "hostname": {
            "type": "keyword"
          }
        }
      },
      "input": {
        "properties": {
          "type": {
            "type": "keyword"
          }
        }
      },
      "fields": {
        "type": "object",
        "dynamic": true
      },
      "ecs": {
        "properties": {
          "version": {
            "type": "keyword"
          }
        }
      },
      "container": {
        "properties": {
          "id": {
            "type": "keyword"
          },
          "name": {
            "type": "keyword"
          },
          "image": {
            "properties": {
              "name": {
                "type": "keyword"
              },
              "tag": {
                "type": "keyword"
              }
            }
          },
          "labels": {
            "type": "object",
            "dynamic": true
          }
        }
      },
      "kubernetes": {
        "properties": {
          "pod": {
            "properties": {
              "name": {
                "type": "keyword"
              },
              "uid": {
                "type": "keyword"
              }
            }
          },
          "namespace": {
            "type": "keyword"
          },
          "node": {
            "properties": {
