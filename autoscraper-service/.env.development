# Development Environment Configuration
# RemoteHive AutoScraper Service

# Environment
ENVIRONMENT=development
DEBUG=true
TESTING=false
RELOAD=true

# Service Configuration
SERVICE_NAME=remotehive-autoscraper-dev
HOST=0.0.0.0
PORT=8001
WORKERS=1

# Security (Development - Default values)
JWT_SECRET_KEY=dev-jwt-secret-key-not-for-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# Database Configuration (SQLite for development)
DATABASE_URL=sqlite:///./autoscraper_dev.db
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Redis Configuration (Local Redis)
REDIS_URL=redis://localhost:6379/1
REDIS_POOL_SIZE=5

# Celery Configuration (Local Redis)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FILE=./logs/autoscraper_dev.log

# Rate Limiting (Disabled for development)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS_PER_WINDOW=1000
RATE_LIMIT_WINDOW_SECONDS=60

# Health Checks
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_INTERVAL=30

# Metrics
METRICS_ENABLED=true
METRICS_PATH=/metrics

# Service Discovery (Local development)
MAIN_SERVICE_URL=http://localhost:8000
MAIN_SERVICE_HEALTH_ENDPOINT=/health

# Scraping Configuration (Relaxed for development)
SCRAPE_TIMEOUT=60
SCRAPE_RETRY_ATTEMPTS=2
SCRAPE_DELAY_BETWEEN_REQUESTS=0
SCRAPE_USER_AGENT=RemoteHive-AutoScraper-Dev/1.0

# Playwright Configuration (Visible browser for debugging)
PLAYWRIGHT_HEADLESS=false
PLAYWRIGHT_TIMEOUT=60000
PLAYWRIGHT_VIEWPORT_WIDTH=1920
PLAYWRIGHT_VIEWPORT_HEIGHT=1080

# Anti-bot Measures (Disabled for development)
USE_PROXY=false
PROXY_URL=
ROTATE_USER_AGENTS=false
RANDOM_DELAYS=false

# Performance (Relaxed limits for development)
MAX_CONCURRENT_SCRAPES=2
MEMORY_LIMIT_MB=256
CPU_LIMIT_PERCENT=50