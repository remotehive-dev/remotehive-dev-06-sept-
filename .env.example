# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/remotehive_db

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# JWT Configuration (MUST BE IDENTICAL ACROSS ALL SERVICES)
# See JWT_MANAGEMENT.md for key rotation and management procedures
SECRET_KEY=your-super-secret-jwt-key-here-change-this-in-production
JWT_SECRET_KEY=your-super-secret-jwt-key-here-change-this-in-production
ALGORITHM=HS256
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_EXPIRE_MINUTES=30

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# =============================================================================
# ENHANCED SCRAPING ENGINE CONFIGURATION
# =============================================================================

# Scraping Mode: requests, playwright, hybrid
SCRAPING_MODE=hybrid

# Anti-Detection Level: basic, moderate, advanced, maximum
ANTI_DETECTION_LEVEL=moderate

# Playwright Settings
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000
PLAYWRIGHT_STEALTH=true
PLAYWRIGHT_BROWSER=chromium
PLAYWRIGHT_ENABLE_IMAGES=false
PLAYWRIGHT_ENABLE_CSS=true
PLAYWRIGHT_ENABLE_FONTS=false
PLAYWRIGHT_VIEWPORT_WIDTH=1920
PLAYWRIGHT_VIEWPORT_HEIGHT=1080

# Rate Limiting Settings
RATE_LIMITING_ENABLED=true
RATE_LIMIT_DELAY=1.0
ADAPTIVE_RATE_LIMITING=true
REQUESTS_PER_MINUTE=60
CONCURRENT_REQUESTS=5
MAX_RETRIES=3
BACKOFF_FACTOR=2.0

# Deduplication Settings
DEDUPLICATION_ENABLED=true
SIMILARITY_THRESHOLD=0.85
CACHE_SIZE=10000
CACHE_TTL=3600

# Proxy Settings
PROXY_ENABLED=false
PROXY_LIST=
PROXY_ROTATION=true
PROXY_TIMEOUT=10
PROXY_MAX_RETRIES=3

# Monitoring Settings
MONITORING_ENABLED=true
ALERT_EMAIL=admin@remotehive.in
ALERT_WEBHOOK_URL=
METRICS_RETENTION_DAYS=30
PERFORMANCE_TRACKING=true

# Logging Configuration
LOG_LEVEL=INFO

# CORS Configuration
ALLOWED_HOSTS=http://localhost:3000,http://localhost:8000,https://yourdomain.com

# Email Configuration (for future use)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@remotehive.com
EMAILS_FROM_NAME=RemoteHive

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=pdf,doc,docx,txt

# External API Keys (for job scraping)
LINKEDIN_API_KEY=your-linkedin-api-key
INDEED_API_KEY=your-indeed-api-key
GLASSDOOR_API_KEY=your-glassdoor-api-key

# Development/Production Environment
ENVIRONMENT=development
DEBUG=true