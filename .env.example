# =============================================================================
# GENERAL CONFIGURATION
# =============================================================================
ENVIRONMENT=production
LOG_LEVEL=INFO

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB Configuration (Primary Database)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your-secure-mongo-password
MONGO_DATABASE=remotehive
MONGODB_URL=mongodb://admin:your-secure-mongo-password@mongodb:27017/remotehive?authSource=admin

# Legacy PostgreSQL (if still needed for migration)
DATABASE_URL=postgresql://username:password@localhost:5432/remotehive_db

# Supabase Configuration (Optional - for legacy features)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# JWT Configuration (MUST BE IDENTICAL ACROSS ALL SERVICES)
# See JWT_MANAGEMENT.md for key rotation and management procedures
SECRET_KEY=your-super-secret-jwt-key-here-change-this-in-production
JWT_SECRET_KEY=your-super-secret-jwt-key-here-change-this-in-production
ALGORITHM=HS256
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_EXPIRE_MINUTES=30

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password
REDIS_URL=redis://:your-secure-redis-password@redis:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://:your-secure-redis-password@redis:6379/0
CELERY_RESULT_BACKEND=redis://:your-secure-redis-password@redis:6379/0
CELERY_WORKER_CONCURRENCY=4

# =============================================================================
# ENHANCED SCRAPING ENGINE CONFIGURATION
# =============================================================================

# Scraping Mode: requests, playwright, hybrid
SCRAPING_MODE=hybrid

# Anti-Detection Level: basic, moderate, advanced, maximum
ANTI_DETECTION_LEVEL=moderate

# Playwright Settings
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000
PLAYWRIGHT_STEALTH=true
PLAYWRIGHT_BROWSER=chromium
PLAYWRIGHT_ENABLE_IMAGES=false
PLAYWRIGHT_ENABLE_CSS=true
PLAYWRIGHT_ENABLE_FONTS=false
PLAYWRIGHT_VIEWPORT_WIDTH=1920
PLAYWRIGHT_VIEWPORT_HEIGHT=1080

# Rate Limiting Settings
RATE_LIMITING_ENABLED=true
RATE_LIMIT_DELAY=1.0
ADAPTIVE_RATE_LIMITING=true
REQUESTS_PER_MINUTE=60
CONCURRENT_REQUESTS=5
MAX_RETRIES=3
BACKOFF_FACTOR=2.0

# Deduplication Settings
DEDUPLICATION_ENABLED=true
SIMILARITY_THRESHOLD=0.85
CACHE_SIZE=10000
CACHE_TTL=3600

# Proxy Settings
PROXY_ENABLED=false
PROXY_LIST=
PROXY_ROTATION=true
PROXY_TIMEOUT=10
PROXY_MAX_RETRIES=3

# Monitoring Settings
MONITORING_ENABLED=true
ALERT_EMAIL=admin@remotehive.in
ALERT_WEBHOOK_URL=
METRICS_RETENTION_DAYS=30
PERFORMANCE_TRACKING=true

# Logging Configuration
LOG_LEVEL=INFO

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# Admin Panel (Next.js)
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_AUTOSCRAPER_API_URL=http://localhost:8001
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production
NEXTAUTH_URL=http://localhost:3000

# Public Website (React + Vite)
VITE_API_URL=http://localhost:8000
VITE_AUTOSCRAPER_API_URL=http://localhost:8001

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","https://yourdomain.com"]
ALLOWED_HOSTS=http://localhost:3000,http://localhost:8000,https://yourdomain.com

# =============================================================================
# EMAIL CONFIGURATION (SMTP)
# =============================================================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@remotehive.com
EMAILS_FROM_NAME=RemoteHive

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=pdf,doc,docx,txt

# External API Keys (for job scraping)
LINKEDIN_API_KEY=your-linkedin-api-key
INDEED_API_KEY=your-indeed-api-key
GLASSDOOR_API_KEY=your-glassdoor-api-key

# =============================================================================
# PRODUCTION DEPLOYMENT CONFIGURATION
# =============================================================================
# Domain Configuration
DOMAIN=yourdomain.com
API_DOMAIN=api.yourdomain.com
ADMIN_DOMAIN=admin.yourdomain.com

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/yourdomain.crt
SSL_KEY_PATH=/etc/ssl/private/yourdomain.key

# =============================================================================
# KUBERNETES DEPLOYMENT
# =============================================================================
KUBERNETES_NAMESPACE=remotehive
KUBERNETES_CLUSTER_NAME=remotehive-cluster
KUBERNETES_INGRESS_CLASS=nginx

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# API Security
API_KEY_HEADER=X-API-Key
ADMIN_API_KEY=your-admin-api-key

# =============================================================================
# DEVELOPMENT CONFIGURATION (Development Only)
# =============================================================================
# Set to false for production
DEBUG=false
DEVELOPMENT_MODE=false